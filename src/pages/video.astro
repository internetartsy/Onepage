---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
---

<Layout>
    <Navbar />
    <main class="mt-7 lg:mt-15">
        <div class="mb-5">
            <a href="/" class="text-blue-700 dark:text-blue-500 hover:underline"
                >‚Üê Back</a
            >
        </div>
        <h1
            class="text-4xl md:text-5xl lg:text-6xl font-bold text-black dark:text-white mb-7 lg:mb-10"
        >
            Video Production
        </h1>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
            <!-- Video project items will go here -->
            <div
                class="border border-gray-200 dark:border-zinc-800 p-6 rounded-lg"
            >
                <h2 class="text-2xl font-bold mb-3">Brand Storytelling</h2>
                <p class="text-gray-600 dark:text-gray-400">
                    Narrative-driven video content for digital platforms.
                </p>
            </div>
        </div>
    </main>
</Layout>
